@page
@model EmployeePortal.Pages.Registration.RegistrationModel
@{
    ViewData["Title"] = "Employee Registration";
}

<h2>Register New Employee</h2>

<div class="scrollable">
    
<form method="post">
    <div class="container row">
        <div class="input-box col-3">
        <label for="Type">Type</label>
        <select asp-for="Employee.Type" asp-items="Model.TypeOptions" class="form-control">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="Employee.Type" class="text-danger"></span>
    </div>
    <div class="input-box col-3">
        <label for="Tower">Tower</label>
        <select asp-for="Employee.Tower" asp-items="Model.TowerOptions" class="form-control">
            <option value="">-- Select Tower --</option>
        </select>
        <span asp-validation-for="Employee.Tower" class="text-danger"></span>
    </div>
    <div class="input-box col-3">
        <label for="ABLGBL">ABLGBL</label>
        <select asp-for="Employee.ABLGBL" class="form-control">
            <option value="">-- Select ABLGBL --</option>
            <option value=""> ABL </option>
            <option value=""> GBL </option>
        </select>
    </div>
     <div class="input-box col-3">
        <label for="BU">Business Unit</label>
        <select asp-for="Employee.BU" asp-items="Model.BUOptions" class="form-control">
            <option value="">-- Select BU --</option>
        </select>
        <span asp-validation-for="Employee.BU" class="text-danger"></span>
    </div>

    <div class="input-box col-6">
        <label for="TLName">TL Name</label>
        <input asp-for="Employee.TLName" class="form-control" />
        <span asp-validation-for="Employee.TLName" class="text-danger"></span>
    </div>
    <div class="input-box col-6">
        <label for="GBL_Lead">GBL Lead</label>
        <input asp-for="Employee.GBL_Lead" class="form-control" />
        <span asp-validation-for="Employee.GBL_Lead" class="text-danger"></span>
    </div>

    <div class="input-box col-3">
    <label for="ProjectCode">Project Code</label>
    <select id="projectCode" asp-for="Employee.ProjectCode" asp-items="Model.ProjectCodeOptions" onchange="fetchProjectName()" aria-owns="projectName" aria-controls="projectName"  class="form-control">
        <option value="">-- Select Project Code --</option>
    </select>
    <span asp-validation-for="Employee.ProjectCode" class="text-danger"></span>
    </div>

    <div class="input-box col-4">
        <label for="projectName">Project Name</label>
    <input type="text" id="projectName" name="Employee.ProjectName" class="form-control" readonly />
    </div>

    <div class="input-box col-6">
        <label for="PONumber">PO Number</label>
        <input type="number"  id="PONumber" name="Employee.PONumber" class="form-control" value="@Model.Employee.PONumber" />
    </div>

     <div class="input-box col-4">
        <label for="PODName">POD Name</label>
        <select asp-for="Employee.PODName" asp-items="Model.PODNameOptions" class="form-control">
            <option value="">-- Select POD Name --</option>
        </select>
        <span asp-validation-for="Employee.PODName" class="text-danger"></span>
    </div>

    <div class="input-box col-6">
        <label for="AltriaPODOwner">Altria POD Owner</label>
        <input asp-for="Employee.AltriaPODOwner" class="form-control" />
        <span asp-validation-for="Employee.AltriaPODOwner" class="text-danger"></span>
    </div>

    <div class="input-box col-6">
        <label for="ALCSDirector">ALCS Director</label>
        <input asp-for="Employee.ALCSDirector" class="form-control" />
        <span asp-validation-for="Employee.ALCSDirector" class="text-danger"></span>
    </div>

     <div class="input-box col-6">
        <label for="GGID">GGID </label>
        <input type="number"  id="GGID" name="Employee.GGID" class="form-control" value="@Model.Employee.GGID" />
    </div>
    <div class="input-box col-6">
        <label for="EmpId">Employee ID</label>
        <input type="number"  id="EmpId" name="Employee.EmpId" class="form-control" value="@Model.Employee.EmpId" />
    </div>

    <div class="input-box col-6">
        <label for="Email">Email</label>
        <input asp-for="Employee.Email" class="form-control" />
        <span asp-validation-for="Employee.Email" class="text-danger"></span>
    </div>

    <div class="input-box col-6">
        <label for="Resource">Resource</label>
        <input asp-for="Employee.Resource" class="form-control" />
        <span asp-validation-for="Employee.Resource" class="text-danger"></span>
    </div>

    <div class="input-box col-3">
        <label for="Grade">Grade</label>
        <select asp-for="Employee.Grade" asp-items="Model.GradeOptions" class="form-control">
            <option value="">-- Select Grade --</option>
        </select>
        <span asp-validation-for="Employee.Grade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Active in Project:</label>
        <div>
            <input type="radio" id="activeYes" name="Employee.IsActiveInProject" value="Yes" asp-for="Employee.IsActiveInProject" />
            <label for="activeYes">Yes</label>
        </div>
        <div>
            <input type="radio" id="activeNo" name="Employee.IsActiveInProject" value="No" asp-for="Employee.IsActiveInProject" />
            <label for="activeNo">No</label>
        </div>
        <span asp-validation-for="Employee.IsActiveInProject" class="text-danger"></span>
    </div>

     <div class="input-box col-3">
        <label for="Gender">Gender</label>
        <select asp-for="Employee.Gender" class="form-control">
            <option value="">-- Select Gender --</option>
            <option value=""> Male </option>
            <option value=""> Female </option>
        </select>
        <span asp-validation-for="Employee.Gender" class="text-danger"></span>
    </div>

    <div class="input-box col-3">
        <label for="location">Location</label>
        <select id="location" asp-for="Employee.Location" class="form-control">
            <option value="onshore">onshore</option>
            <option value="offshore">offshore</option>
        </select>
    </div>

    <div class="input-box col-4">
       <label for="offshore-city" id="offshore-label" class="hidden">Select Offshore City:</label>
       <select id="offshore-city" asp-for="Employee.OffshoreCity" asp-items="Model.OffShoreCityOptions" class="hidden form-control">
           <option value="">-- Select City --</option>
       </select>
    </div>

    <div class="input-box col-6">
        <label for="OffshoreBackup">Offshore Backup</label>
        <input asp-for="Employee.OffshoreBackup" class="form-control" />
        <span asp-validation-for="Employee.OffshoreBackup" class="text-danger"></span>
    </div>

     <div class="input-box col-6">
        <label for="SL">SL</label>
        <input asp-for="Employee.SL" class="form-control" />
        <span asp-validation-for="Employee.SL" class="text-danger"></span>
    </div>

     <div class="input-box col-6">
        <label for="New">New</label>
        <input asp-for="Employee.New" class="form-control" />
        <span asp-validation-for="Employee.New" class="text-danger"></span>
    </div>

     <div class="input-box col-6">
        <label for="Transition">Transition</label>
        <input asp-for="Employee.Transition" class="form-control" />
        <span asp-validation-for="Employee.Transition" class="text-danger"></span>
    </div>

    <div class="input-box col-4">
        <label for="DateOfHire">Date of Hire</label>
        <input asp-for="Employee.DateOfHire" type="date" onload="getDate()" class="form-control date-field"/>
        <span asp-validation-for="Employee.DateOfHire" class="text-danger"></span>
    </div>

    <div class="input-box col-3">
        <label for="StartDate">Start Date</label>
        <input asp-for="Employee.StartDate" type="date" onload="getDate()" class="form-control date-field" />
        <span asp-validation-for="Employee.StartDate" class="text-danger"></span>
    </div>
    
    <div class="input-box col-3">
        <label for="EndDate">End Date</label>
        <input asp-for="Employee.EndDate" type="date" onload="getDate()" class="form-control date-field"/>
        <span asp-validation-for="Employee.EndDate" class="text-danger"></span>
    </div>
    
      <div class="input-box">
         <table class="table">
                        <thead>
                            <tr>
                                <th>Jan</th>
                                <th>Feb</th>
                                <th>Mar</th>
                                <th>April</th>
                                <th>May</th>
                                <th>June</th>
                                <th>July</th>
                                <th>Aug</th>
                                <th>Sep</th>
                                <th>Oct</th>
                                <th>Nov</th>
                                <th>Dec</th>
                            </tr>
                        </thead>
                            <tbody>
                                    <tr>
                                        <td><input asp-for="Employee.January" type="number" step="0.1" /></td>
                                        <td><input asp-for="Employee.February" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.March" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.April" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.May" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.June" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.July" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.August" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.September" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.October" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.November" type="number" step="0.1"/></td>
                                        <td><input asp-for="Employee.December" type="number" step="0.1"/></td>
                                    </tr>
                            </tbody>
        </table>
      </div>

       <div class="input-box col-3">
            <label for="COR">COR</label>
            <input asp-for="Employee.COR" type="text" class="form-control"/>
            <span asp-validation-for="Employee.COR" class="text-danger"></span>
        </div>

        <div class="input-box col-3">
            <label for="Group">Group</label>
            <input asp-for="Employee.Group" type="text" class="form-control"/>
            <span asp-validation-for="Employee.Group" class="text-danger"></span>
        </div>

        <div class="input-box col-3">
            <label for="MonthlyPrice">Monthly Price</label>
            <input asp-for="Employee.MonthlyPrice" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Employee.MonthlyPrice" class="text-danger"></span>
        </div>

        <div class="input-box col-3">
            <label for="RoleinPOD">Role in POD</label>
            <input asp-for="Employee.RoleinPOD" type="text" class="form-control"/>
            <span asp-validation-for="Employee.RoleinPOD" class="text-danger"></span>
        </div>

        <div class="input-box col-3">
            <label for="AltriaEXP">Altria EXP</label>
            <input asp-for="Employee.AltriaEXP" type="number" step="0.01" class="form-control"/>
            <span asp-validation-for="Employee.AltriaEXP" class="text-danger"></span>
        </div>

        <div class="input-box col-3">
            <label for="OverallExp">Overall EXP</label>
            <input asp-for="Employee.OverallExp" type="number" step="0.01" class="form-control"/>
            <span asp-validation-for="Employee.OverallExp" class="text-danger"></span>
        </div>

        <div class="input-box col-3">
            <label for="Skills">Skills</label>
            <input asp-for="Employee.Skills" type="text" class="form-control"/>
            <span asp-validation-for="Employee.Skills" class="text-danger"></span>
        </div>

        <div class="input-box col-3">
            <label for="Certificates">Certificates</label>
            <input class="form-control" type="text" id="Certificates">
        </div>

    </div>

    <button type="submit" class="btn btn-primary">Register</button>
    <a asp-page="/Registration/EmployeeList" class="btn btn-secondary">Back to List</a>
</form>

</div>
