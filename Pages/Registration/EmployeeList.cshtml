@page
@model EmployeePortal.Pages.Registration.EmployeeListModel
@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Grade</th>
            <th>BU</th>
            <th>Date of Hire</th>
            <th>Project Code</th>
            <th>Project Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>@employee.Grade</td>
                <td>@employee.BU</td>
                <td>@employee.DateOfHire.ToShortDateString()</td>
                <td>@employee.ProjectCode</td>
                <td>@employee.ProjectName</td>
                <td>@employee.StartDate.ToShortDateString()</td>
                <td>@employee.EndDate.ToShortDateString()</td>
                <td>
                    <!-- Edit Button (redirects to an edit page or opens a modal) -->
                     <a asp-page="/Registration/EditEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Edit</a>
                </td>
                 <td>
                 <!-- Delete Button -->
                    <form  method="post" asp-page-handler="Delete" asp-route-id="@employee.EmployeeId" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button to add a new employee (this can redirect to the registration form) -->
<a href="@Url.Page("/Registration/Registration")" class="btn btn-success">Add New Employee</a>
